<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/player_background">

    <ImageView
        android:id="@+id/ivPlayerCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/book_cover_description"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="3:4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.65"
        android:elevation="8dp"
        android:background="@drawable/cover_image_background"
        tools:src="@drawable/placeholder_book_cover" />

    <TextView
        android:id="@+id/tvPlayerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toBottomOf="@+id/ivPlayerCover"
        tools:text="The Great Adventure" />

    <TextView
        android:id="@+id/tvPlayerAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayerTitle"
        tools:text="John Smith" />

    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayerAuthor"
        tools:text="00:00" />

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCurrentTime"
        tools:text="23:45" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:progressTint="@color/blue_500"
        android:thumbTint="@color/orange_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCurrentTime" />

    <!-- Chapter Navigation in a compact row -->
    <LinearLayout
        android:id="@+id/layoutChapters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/seekBar">
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPrevChapter"
            style="@style/Widget.App.Button.IconOnly"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_previous_chapter"
            app:iconTint="@color/blue_700"
            app:iconSize="24dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/previous_chapter" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChapterList"
            style="@style/Widget.App.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:textSize="14sp"
            android:text="@string/chapters"
            app:icon="@drawable/ic_chapters"
            app:iconTint="@color/blue_700"
            app:iconSize="20dp"
            app:strokeColor="@color/blue_500" />
            
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNextChapter"
            style="@style/Widget.App.Button.IconOnly"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_next_chapter"
            app:iconTint="@color/blue_700"
            app:iconSize="24dp"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:contentDescription="@string/next_chapter" />
    </LinearLayout>

    <!-- Main Playback Controls -->
    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/layoutChapters">

        <ImageButton
            android:id="@+id/btnRewind"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/rewind_10_seconds"
            android:src="@drawable/ic_rewind"
            app:tint="@color/blue_700" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnPlay"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="24dp"
            android:contentDescription="@string/play_pause"
            app:fabCustomSize="64dp"
            app:maxImageSize="36dp"
            app:backgroundTint="@color/blue_500"
            app:tint="@color/white"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/btnForward"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/forward_30_seconds"
            android:src="@drawable/ic_forward"
            app:tint="@color/blue_700" />
    </LinearLayout>

    <!-- Playback Speed Controls -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/layoutControls">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/btn05x"
                style="@style/Widget.App.Chip.Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.5x" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn075x"
                style="@style/Widget.App.Chip.Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.75x" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn1x"
                style="@style/Widget.App.Chip.Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1x" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn125x"
                style="@style/Widget.App.Chip.Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.25x" />

            <com.google.android.material.chip.Chip
                android:id="@+id/btn15x"
                style="@style/Widget.App.Chip.Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5x" />
            
            <com.google.android.material.chip.Chip
                android:id="@+id/btn2x"
                style="@style/Widget.App.Chip.Speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2x" />
        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 