<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base custom button style -->
    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blue_700</item>
        <item name="strokeColor">@color/blue_500</item>
        <item name="iconTint">@color/blue_700</item>
        <item name="rippleColor">@color/blue_200</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minHeight">36dp</item>
    </style>
    
    <!-- Icon-only button style -->
    <style name="Widget.App.Button.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">@color/blue_200</item>
    </style>
    
    <!-- Speed chip style -->
    <style name="Widget.App.Chip.Speed" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipStrokeColor">@color/blue_200</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources> 